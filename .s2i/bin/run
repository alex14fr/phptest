#!/bin/sh

echo hello from run
pwd
ls
cp -a /persist/code/* .
cp -a /persist/code/.htaccess .
ln -s /persist/data 
ln -s /persist/pecnum 
ls -la
conf2del="conf.d/autoindex conf.d/ssl conf.d/userdir conf.d/welcome \
          conf.modules.d/00-dav conf.modules.d/00-lua conf.modules.d/00-optional \
          conf.modules.d/00-proxy conf.modules.d/00-ssl"
for f in $conf2del; do
  mv /etc/httpd/$f.conf $f.conf.off
done
exec /usr/libexec/s2i/run
#> /opt/app-root/etc/conf.d/50-mpm-tuning.conf
#exec httpd -DFOREGROUND
